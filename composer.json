{
    "name": "dmk/t3twig",
    "description": "Extend rn_base for using twig templates instead of marker templates",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3 CMS",
        "twig",
        "template"
    ],
    "homepage": "http://www.dmk-ebusiness.de/",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Eric Hertwig",
            "email": "eric.hertwig@dmk-ebusiness.de",
            "role": "Developer"
        },
        {
            "name": "RenÃ© Nitzsche",
            "email": "nitzsche@dmk-ebusiness.de",
            "role": "Developer"
        },
        {
            "name": "Michael Wagner",
            "email": "michael.wagner@dmk-ebusiness.de",
            "role": "Developer"
        }
    ],
    "require": {
        "typo3/cms-core": "~7.6.16 || ~8.7 || ~9.5",
        "digedag/rn-base": ">=1.4",
        "twig/twig": "~1.0"
    },
    "require-dev": {
        "nimut/testing-framework": "^2 || ^4",
        "phpunit/phpunit": "^5 || ^6",
        "mikey179/vfsstream": "^1.6"
    },
    "suggest": {
        "twig/extensions": "Common additional features for Twig that do not directly belong in core. See @Documentation/reference/extensions/ThirdParty.md"
    },
    "autoload": {
        "psr-4": {
            "DMK\\T3twig\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DMK\\T3twig\\Tests\\": "Tests"
        }
    },
    "support": {
        "email": "dev@dmk-ebusiness.de"
    },
    "replace": {
        "typo3-ter/t3twig": "*"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "preferred-install": {
            "typo3/cms": "source"
        }
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
